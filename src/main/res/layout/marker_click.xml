<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_close"
            android:gravity="center"
            android:text="X"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_person_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-black"
            android:text="Dr. Damon Salvatore"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="M.B.B.S/Cadiologist"
            android:textColor="#000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No"
                android:textColor="#000000" />

            <View
                android:id="@+id/belowContact"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/userPhone"
                android:layout_marginTop="10dp"
                android:background="#D3CFCF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/belowContact"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_outline_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userPhone"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="+92-311-0062142"
                android:textColor="#000000"
                android:id="@+id/phone"/>

            <TextView
                android:id="@+id/userLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/belowContact"
                android:layout_marginTop="50dp"
                android:text=" Request Location"
                android:textColor="#000000" />

            <View
                android:id="@+id/locationLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:background="#D3CFCF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationLine"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_baseline_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationLine"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:text="Gulgasht, Multan"
                android:textColor="#000000"
                android:id="@+id/location"/>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>