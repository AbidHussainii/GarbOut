<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserPanal.UserMap">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Location "
            android:layout_marginStart="60dp"
            android:layout_marginTop="17dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/mapBackArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp"
            android:background="@drawable/ic_arrow_back"
            android:contentDescription="@string/todo"
            android:onClick="backArrowMapActivity"/>

    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/black"
        android:layout_below="@id/layout"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@id/layout"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.skyfishjy.library.RippleBackground
            android:id="@+id/content"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="200dp"
            app:rb_color="#60003333"
            app:rb_duration="3000"
            app:rb_radius="15dp"
            app:rb_rippleAmount="4"
            app:rb_scale="2">

            <ImageView
                android:id="@+id/img_pin"
                android:layout_width="30dp"
                android:layout_height="30dp"
               android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/pin" />
        </com.skyfishjy.library.RippleBackground>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ll_ab"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pro_bar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="5dp"
                android:indeterminate="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:text="Selected location"
                    android:textStyle="bold"
                    android:textAllCaps="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/dragg_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_baseline_location"
                android:drawablePadding="10dp"
                android:text="Loading..."
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ic_save_proceed"
                android:enabled="false"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Next"
                android:background="@drawable/btn_bg"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:onClick="mapActivityNextBtn"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>